{
    "app-id": "com.belmoussaoui.Obfuscate",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "41",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "obfuscate",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options" : {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/obfuscate/cargo"
        }
    },
    "modules" : [
        {
            "name": "libsass",
            "buildsystem": "meson",
            "sources": [{
                "type": "git",
                "url": "https://github.com/lazka/libsass.git",
                "branch": "meson"
            }]
        },
        {
            "name": "sassc",
            "buildsystem": "meson",
            "sources": [{
                "type": "git",
                "url": "https://github.com/lazka/sassc.git",
                "branch": "meson"
            }]
        },
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "config-opts": [
                "-Dintrospection=disabled",
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [{
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                "tag": "1.0.0-alpha.2",
                "commit": "f5932ab4250c8e709958c6e75a1a4941a5f0f386"
            }]
        },
        {
            "name" : "obfuscate",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/World/obfuscate/uploads/53c611b1e04be993b7a0eb0e04882c78/obfuscate-0.0.3.tar.xz",
                    "sha256": "ac1ee218d76af2f24140acff89f1bca46d2ae4ed2c1920332970f10a450a834c"
                }
            ]
        }
    ]
}

